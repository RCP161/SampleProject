<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctr="clr-namespace:Company.Styling.Controls"
                    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Styles/InoIconBox.xaml" />
        <ResourceDictionary Source="Styles/InoHamburgerMenu.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style BasedOn="{StaticResource mah:MahApps.Styles.MetroWindow.VisualStudio}" TargetType="ctr:InoWindow" />
    <Style BasedOn="{StaticResource InoIconBoxStyle}" TargetType="ctr:InoIconBox" />
    <Style BasedOn="{StaticResource InoHamburgerMenuStyle}" TargetType="ctr:InoHamburgerMenu" />
</ResourceDictionary>